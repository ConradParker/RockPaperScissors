@model IEnumerable<RockPaperScissors.Model.PlayerType>
@{
    ViewData["Title"] = "Rock, Paper, Scissors";
}
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Select Your Opponent.
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name) Computer
                </td>
                <td>
                    <a asp-action="Play" asp-route-id="@item.Id">Select</a>
                </td>
            </tr>               
            }
        </tbody>
    </table>
</div>