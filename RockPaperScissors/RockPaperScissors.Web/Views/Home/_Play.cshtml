@model RockPaperScissors.Dto.Query.IndexView
@using System.Linq;

<!-- Play Section -->
<section id="play" class="bg-primary">
    <div class="container">
        <div id="start-game" class="row">
            <div class="col-lg-12">
                <h3>Select Your Opponent...</h3>
                @{int i = 1;}
                @foreach (var player in Model.PlayerTypes)
                {
                    <a class="highlight" href="javascript:selectPlayer(@i)">
                        <img src="https://robohash.org/@player@@.png"/><span>@player Computer</span>
                    </a>
                    i++;
                }
            </div>
        </div>

        <div id="match-play"></div>
    </div>
</section>