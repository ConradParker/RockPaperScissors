@model IList<RockPaperScissors.Dto.Enums.PlayerType>
@using System.Linq;

<!-- Play Section -->
<section id="play" class="bg-primary">
    <div class="container">
        <div id="start-game" class="row">
            <h3 class="section-subheading">Select Your Opponent...</h3>
            @{int i = 1;}
            @foreach (var player in Model)
            {
                <div class="col-sm-6">
                    <button class="btn btn-primary btn-robot" onclick="selectPlayer(@i)"><img src="https://robohash.org/@player@@.png?size=100x100" />&nbsp;@player Computer</button>
                </div>
                i++;
            }
        </div>
        <div class="row text-center">
            <div class="col-lg-12">
                <div id="match-loader" class="loader"></div>
            </div>
        </div>
        <div id="match-play"></div>
    </div>
</section>